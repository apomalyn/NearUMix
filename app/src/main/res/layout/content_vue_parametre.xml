<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="squiddle.sheshire.apomalyn.qc.ca.nearumix.VueParametre"
    tools:showIn="@layout/app_bar_vue_parametre">

    <Button
        android:id="@+id/Deconnexion"
        android:layout_width="162dp"
        android:layout_height="50dp"
        android:text="Deconnexion"
        app:layout_constraintLeft_toRightOf="@+id/Amis"
        android:layout_marginLeft="42dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp" />

    <QuickContactBadge
        android:id="@+id/Amis"
        android:layout_width="99dp"
        android:layout_height="92dp"
        android:background="@color/vert3"
        app:srcCompat="@mipmap/ic_launcher_round"
        android:layout_marginLeft="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="64dp"
        android:layout_height="116dp"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="?attr/actionModeCloseDrawable"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <Switch
        android:id="@+id/notification"
        android:layout_width="222dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="19dp"
        android:checked="true"
        android:text="Notification"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pseudo" />

    <EditText
        android:id="@+id/pseudo"
        android:layout_width="238dp"
        android:layout_height="44dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Pseudo"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Amis" />

    <CheckBox
        android:id="@+id/toutLeMonde"
        android:layout_width="142dp"
        android:layout_height="53dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="251dp"
        android:checked="true"
        android:text="Tous les joueurs"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/visibiliteTitre"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/visibiliteTitre"
        android:layout_width="204dp"
        android:layout_height="38dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="14dp"
        android:text="Qui peut voir ?"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/notification" />

    <CheckBox
        android:id="@+id/justeAmis"
        android:layout_width="159dp"
        android:layout_height="59dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="9dp"
        android:text="Juste mes amis"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/visibiliteTitre"
        app:layout_constraintTop_toBottomOf="@+id/toutLeMonde" />

    <CheckBox
        android:id="@+id/personne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="5dp"
        android:text="Personne"
        android:textSize="18sp"
        app:layout_constraintLeft_toRightOf="@+id/visibiliteTitre"
        app:layout_constraintTop_toBottomOf="@+id/justeAmis" />

    <TextView
        android:id="@+id/langue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="133dp"
        android:contentDescription=" "
        android:text="Langue ?"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visibiliteTitre" />

    <CheckBox
        android:id="@+id/francais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="12dp"
        android:checked="true"
        android:text="FranÃ§ais"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/langue"
        app:layout_constraintTop_toBottomOf="@+id/personne" />

    <CheckBox
        android:id="@+id/anglais"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="78dp"
        android:layout_marginTop="18dp"
        android:text="English"
        android:textSize="24sp"
        app:layout_constraintLeft_toRightOf="@+id/langue"
        app:layout_constraintTop_toBottomOf="@+id/francais" />


</android.support.constraint.ConstraintLayout>
